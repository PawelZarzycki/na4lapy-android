<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.kodujdlapolski.na4lapy.ui.details.DetailsActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar_height"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_bar_height">

                <ImageView
                    android:id="@+id/background_picture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"
                    tools:layout_height="300dp"
                    tools:src="@android:color/holo_purple" />

                <ImageView
                    android:id="@+id/profile_pic_on_details"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:adjustViewBounds="true"
                    tools:src="@android:color/holo_blue_bright" />

                <ImageView
                    android:id="@+id/matching_lvl_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignEnd="@id/profile_pic_on_details"
                    android:layout_alignRight="@id/profile_pic_on_details"
                    android:layout_alignTop="@id/profile_pic_on_details"
                    android:layout_marginEnd="-15dp"
                    android:layout_marginRight="-15dp"
                    android:layout_marginTop="-10dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/vector_drawable_procent_100" />

            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/AppTheme.PopupOverlay" />


        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <!-- without  android:layout_marginBottom="1dp"  nested scroll view is cutting content ! -->
    <android.support.v4.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/images_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

            <TextView
                android:id="@+id/description"
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"
                tools:text="Lorem ipsum dolor sit amet, colentesque placllis, neque ex hendrerit erat, placerat tristique urna purus sed arcu. Interdum et malesuada fames ac ante ipsum primis in faucibus." />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/animal_size_image"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/content_desc_animal_size"
                    tools:src="@drawable/vector_drawable_przegladanie_sredni" />

                <ImageView
                    android:id="@+id/animal_gender_image"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/content_desc_animal_gender"
                    tools:src="@drawable/vector_drawable_przegladanie_samiec" />

                <ImageView
                    android:id="@+id/animal_activity_image"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/content_desc_animal_activity"
                    tools:src="@drawable/vector_drawable_przegladanie_domator" />
            </LinearLayout>


            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:alignmentMode="alignMargins"
                android:columnCount="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/details_table_inner_margin"
                    android:layout_marginRight="@dimen/details_table_inner_margin"
                    android:text="@string/details_race" />

                <TextView
                    android:id="@+id/info_race"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sdsdsd"
                    tools:text="race" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/details_table_inner_margin"
                    android:layout_marginRight="@dimen/details_table_inner_margin"
                    android:text="@string/details_size" />

                <TextView
                    android:id="@+id/info_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/details_table_inner_margin"
                    android:layout_marginRight="@dimen/details_table_inner_margin"
                    android:text="@string/details_gender" />

                <TextView
                    android:id="@+id/info_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="gender" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/details_table_inner_margin"
                    android:layout_marginRight="@dimen/details_table_inner_margin"
                    android:text="@string/details_activity" />

                <TextView
                    android:id="@+id/info_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="activity" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/details_table_inner_margin"
                    android:layout_marginRight="@dimen/details_table_inner_margin"
                    android:text="@string/details_training" />

                <TextView
                    android:id="@+id/info_training"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="training" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/details_table_inner_margin"
                    android:layout_marginRight="@dimen/details_table_inner_margin"
                    android:text="@string/details_sterilization" />

                <TextView
                    android:id="@+id/info_sterilization"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="sterilization" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/details_table_inner_margin"
                    android:layout_marginRight="@dimen/details_table_inner_margin"
                    android:text="@string/details_chip" />

                <TextView
                    android:id="@+id/info_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="chip" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/details_table_inner_margin"
                    android:layout_marginRight="@dimen/details_table_inner_margin"
                    android:text="@string/details_vaccination" />

                <TextView
                    android:id="@+id/info_vaccination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="vaccination" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/details_table_inner_margin"
                    android:layout_marginRight="@dimen/details_table_inner_margin"
                    android:text="@string/details_attitude_towards_people" />

                <TextView
                    android:id="@+id/info_attitude_towards_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="attitude_towards_people" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/details_table_inner_margin"
                    android:layout_marginRight="@dimen/details_table_inner_margin"
                    android:text="@string/details_attitude_towards_children" />

                <TextView
                    android:id="@+id/info_attitude_towards_children"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="attitude_towards_children" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/details_table_inner_margin"
                    android:layout_marginRight="@dimen/details_table_inner_margin"
                    android:text="@string/details_attitude_towards_dogs" />

                <TextView
                    android:id="@+id/info_attitude_towards_dogs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="attitude_towards_dogs" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/details_table_inner_margin"
                    android:layout_marginRight="@dimen/details_table_inner_margin"
                    android:text="@string/details_attitude_towards_cats" />

                <TextView
                    android:id="@+id/info_attitude_towards_cats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="attitude_towards_cats" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/details_table_inner_margin"
                    android:layout_marginRight="@dimen/details_table_inner_margin"
                    android:text="@string/details_admittance_date" />

                <TextView
                    android:id="@+id/info_admittance_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="admittance_date" />

            </GridLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_to_fav_fab"
        style="@style/floating_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:src="@drawable/ic_favorite_border_white"
        app:layout_anchor="@id/app_bar"
        app:layout_anchorGravity="bottom|end" />

</android.support.design.widget.CoordinatorLayout>
